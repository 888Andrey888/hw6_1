<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/default_margin_padding"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".presentation.addtask.AddTaskFragment">

    <EditText
        android:id="@+id/et_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/add_task_title"
        android:inputType="text"
        android:textSize="@dimen/default_text_size" />

    <CheckBox
        android:id="@+id/cb_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/state"
        android:textSize="@dimen/default_text_size"
        android:layout_marginTop="@dimen/default_margin_padding"/>

    <Button
        android:id="@+id/btn_add_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/default_text_size"
        android:text="@string/add_task"
        android:layout_marginTop="@dimen/default_margin_padding"/>

</LinearLayout>